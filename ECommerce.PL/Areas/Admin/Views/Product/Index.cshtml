@model IEnumerable<ECommerce.DAL.Models.Product>
@{
    ViewData["Title"] = "Products Management - Shopfinity Admin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>

    /* Page Container */
    .products-container {
        padding: 2rem 0;
        animation: fadeInUp 0.5s ease;
    }

    /* Page Header */
    .page-header {
        background: linear-gradient(135deg, var(--dark-navy), var(--slate-blue));
        color: white;
        padding: 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
        animation: fadeInDown 0.6s ease;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(163, 176, 135, 0.2) 0%, transparent 70%);
            border-radius: 50%;
        }

    .page-header-content {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .page-title-section {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .page-icon {
        font-size: 2.5rem;
    }

    .page-title-group h2 {
        font-size: 2rem;
        font-weight: 800;
        margin: 0;
    }

    .page-subtitle {
        font-size: 0.95rem;
        opacity: 0.9;
        margin: 0.25rem 0 0 0;
    }

    /* Add Product Button */
    .btn-add-product {
        background: linear-gradient(135deg, var(--sage-green), #b5c599);
        border: none;
        color: white;
        padding: 0.85rem 2rem;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(163, 176, 135, 0.3);
        text-decoration: none;
        display: inline-block;
    }

        .btn-add-product:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(163, 176, 135, 0.5);
            color: white;
        }

        .btn-add-product i {
            margin-right: 0.5rem;
            font-size: 1.1rem;
        }

    /* Stats Bar */
    .stats-bar {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .stat-card {
        background: white;
        border: 2px solid var(--cream);
        border-radius: 14px;
        padding: 1.25rem 1.5rem;
        flex: 1;
        min-width: 200px;
        box-shadow: 0 2px 10px rgba(49, 54, 71, 0.08);
        transition: all 0.3s;
    }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 15px rgba(49, 54, 71, 0.12);
        }

    .stat-label {
        color: var(--slate-blue);
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .stat-value {
        color: var(--dark-navy);
        font-size: 1.8rem;
        font-weight: 800;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .stat-icon {
        font-size: 1.5rem;
        color: var(--sage-green);
    }

    /* Table Card */
    .table-card {
        background: white;
        border: 2px solid var(--cream);
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(49, 54, 71, 0.1);
        overflow: hidden;
    }

    /* Table Styling */
    .products-table {
        margin: 0;
        width: 100%;
    }

        .products-table thead {
            background: linear-gradient(135deg, var(--cream), #fffae6);
        }

            .products-table thead th {
                color: var(--dark-navy);
                font-weight: 700;
                font-size: 0.9rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                padding: 1.25rem 1rem;
                border: none;
            }

        .products-table tbody tr {
            transition: all 0.3s;
            border-bottom: 1px solid var(--cream);
        }

            .products-table tbody tr:hover {
                background: rgba(163, 176, 135, 0.05);
                transform: scale(1.01);
            }

        .products-table tbody td {
            padding: 1rem;
            vertical-align: middle;
            color: var(--slate-blue);
            font-size: 0.95rem;
        }

    /* Product Image */
    .product-image {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 10px;
        border: 2px solid var(--cream);
        transition: all 0.3s;
    }

        .product-image:hover {
            transform: scale(1.5);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            z-index: 10;
            position: relative;
        }

    .product-image-placeholder {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, var(--cream), #fffae6);
        border: 2px solid var(--cream);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .product-image-placeholder i {
            font-size: 1.5rem;
            color: var(--sage-green);
            opacity: 0.5;
        }

    /* Product Name */
    .product-name {
        color: var(--dark-navy);
        font-weight: 600;
        font-size: 1rem;
    }

    /* Category Badge */
    .category-badge {
        background: linear-gradient(135deg, var(--slate-blue), #6b7280);
        color: white;
        padding: 0.35rem 0.85rem;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 600;
        display: inline-block;
    }

    /* Price */
    .product-price {
        color: var(--sage-green);
        font-weight: 700;
        font-size: 1.05rem;
    }

    /* Stock Badges */
    .stock-badge-high {
        background: linear-gradient(135deg, var(--sage-green), #b5c599);
        color: white;
        padding: 0.4rem 0.9rem;
        border-radius: 8px;
        font-weight: 700;
        font-size: 0.85rem;
        display: inline-block;
    }

    .stock-badge-low {
        background: linear-gradient(135deg, var(--warning-orange), #fb923c);
        color: white;
        padding: 0.4rem 0.9rem;
        border-radius: 8px;
        font-weight: 700;
        font-size: 0.85rem;
        display: inline-block;
    }

    .stock-badge-out {
        background: linear-gradient(135deg, var(--error-red), #c82333);
        color: white;
        padding: 0.4rem 0.9rem;
        border-radius: 8px;
        font-weight: 700;
        font-size: 0.85rem;
        display: inline-block;
    }

    /* Action Buttons */
    .actions-cell {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .btn-edit {
        background: linear-gradient(135deg, var(--warning-orange), #fb923c);
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.85rem;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
    }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(245, 158, 11, 0.4);
            color: white;
        }

    .btn-delete {
        background: linear-gradient(135deg, var(--error-red), #c82333);
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.85rem;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
    }

        .btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
            color: white;
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }

    .empty-icon {
        font-size: 5rem;
        color: var(--sage-green);
        opacity: 0.3;
        margin-bottom: 1.5rem;
    }

    .empty-title {
        color: var(--dark-navy);
        font-weight: 700;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .empty-text {
        color: var(--slate-blue);
        margin-bottom: 2rem;
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .products-table {
            font-size: 0.85rem;
        }

        .product-image,
        .product-image-placeholder {
            width: 50px;
            height: 50px;
        }

        .actions-cell {
            flex-direction: column;
        }

        .btn-edit,
        .btn-delete {
            width: 100%;
            justify-content: center;
        }
    }

    @@media (max-width: 768px) {
        .page-header-content {
            flex-direction: column;
            text-align: center;
        }

        .page-title-section {
            flex-direction: column;
        }

        .btn-add-product {
            width: 100%;
        }

        .stats-bar {
            flex-direction: column;
        }

        .stat-card {
            min-width: 100%;
        }

        .table-responsive {
            border-radius: 20px;
            overflow-x: auto;
        }
    }

    @@media (max-width: 576px) {
        .page-header {
            padding: 1.5rem;
        }

        .page-title-group h2 {
            font-size: 1.5rem;
        }

        .page-icon {
            font-size: 2rem;
        }

        .products-table thead th {
            padding: 1rem 0.5rem;
            font-size: 0.8rem;
        }

        .products-table tbody td {
            padding: 0.75rem 0.5rem;
            font-size: 0.85rem;
        }
    }
</style>

<div class="products-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title-section">
                <i class="bi bi-box-seam-fill page-icon"></i>
                <div class="page-title-group">
                    <h2>Products Management</h2>
                    <p class="page-subtitle">Manage your Shopfinity product inventory</p>
                </div>
            </div>
            <a asp-action="Create" class="btn-add-product">
                <i class="bi bi-plus-circle-fill"></i>Add New Product
            </a>
        </div>
    </div>

    <!-- Stats Bar -->
    <div class="stats-bar">
        <div class="stat-card">
            <div class="stat-label">Total Products</div>
            <div class="stat-value">
                <i class="bi bi-box-seam stat-icon"></i>
                <span>@Model.Count()</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-label">In Stock</div>
            <div class="stat-value">
                <i class="bi bi-check-circle stat-icon"></i>
                <span>@Model.Count(p => p.Stock > 0)</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Low Stock</div>
            <div class="stat-value">
                <i class="bi bi-exclamation-triangle stat-icon"></i>
                <span>@Model.Count(p => p.Stock > 0 && p.Stock <= 10)</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Out of Stock</div>
            <div class="stat-value">
                <i class="bi bi-x-circle stat-icon"></i>
                <span>@Model.Count(p => p.Stock == 0)</span>
            </div>
        </div>
    </div>

    <!-- Table Card -->
    <div class="table-card">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table products-table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" alt="@product.Name" class="product-image" />
                                    }
                                    else
                                    {
                                        <div class="product-image-placeholder">
                                            <i class="bi bi-image"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <span class="product-name">@product.Name</span>
                                </td>
                                <td>
                                    <span class="category-badge">@(product.Category?.Name ?? "N/A")</span>
                                </td>
                                <td>
                                    <span class="product-price">@product.Price.ToString("C")</span>
                                </td>
                                <td>
                                    @if (product.Stock > 10)
                                    {
                                        <span class="stock-badge-high">
                                            <i class="bi bi-check-circle-fill me-1"></i>@product.Stock
                                        </span>
                                    }
                                    else if (product.Stock > 0)
                                    {
                                        <span class="stock-badge-low">
                                            <i class="bi bi-exclamation-triangle-fill me-1"></i>@product.Stock
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="stock-badge-out">
                                            <i class="bi bi-x-circle-fill me-1"></i>Out of Stock
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="actions-cell">
                                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn-edit">
                                            <i class="bi bi-pencil-fill"></i>Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn-delete">
                                            <i class="bi bi-trash-fill"></i>Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-inbox empty-icon"></i>
                <h3 class="empty-title">No Products Yet</h3>
                <p class="empty-text">Start adding products to your Shopfinity store to see them here.</p>
                <a asp-action="Create" class="btn-add-product">
                    <i class="bi bi-plus-circle-fill"></i>Add Your First Product
                </a>
            </div>
        }
    </div>
</div>
