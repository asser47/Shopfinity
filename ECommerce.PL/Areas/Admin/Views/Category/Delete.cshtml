@model ECommerce.DAL.Models.Category
@{
    ViewData["Title"] = "Delete Category - Shopfinity Admin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>

    @@keyframes shakeWarning {
        0%, 100% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-5px);
        }

        75% {
            transform: translateX(5px);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }
    }

    /* Page Container */
    .admin-delete-container {
        padding: 2rem 0;
        animation: fadeInUp 0.5s ease;
    }

    /* Page Header */
    .page-header {
        background: linear-gradient(135deg, var(--error-red), #c82333);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 16px 16px 0 0;
        margin-bottom: 0;
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
            border-radius: 50%;
        }

    .page-header-content {
        position: relative;
        z-index: 1;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .page-header-icon {
        font-size: 1.8rem;
        animation: shakeWarning 0.5s ease;
    }

    .page-header-title {
        font-size: 1.6rem;
        font-weight: 800;
        margin: 0;
    }

    /* Card Styling */
    .delete-card {
        background: white;
        border: 2px solid var(--error-red);
        border-radius: 0 0 20px 20px;
        box-shadow: 0 4px 20px rgba(220, 53, 69, 0.2);
        overflow: hidden;
    }

    .delete-card-body {
        padding: 2.5rem;
    }

    /* Warning Alert */
    .warning-alert {
        background: linear-gradient(135deg, #fee, #fdd);
        border: 2px solid var(--error-red);
        border-radius: 14px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        animation: pulse 2s ease-in-out infinite;
    }

    .warning-alert-content {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .warning-icon {
        font-size: 2.5rem;
        color: var(--error-red);
        flex-shrink: 0;
    }

    .warning-text {
        flex: 1;
    }

    .warning-title {
        color: var(--error-red);
        font-weight: 800;
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .warning-description {
        color: #721c24;
        font-size: 0.95rem;
        margin: 0;
        line-height: 1.5;
    }

    /* Category Details Section */
    .category-details {
        background: linear-gradient(135deg, var(--cream), #fffae6);
        border: 2px solid var(--cream);
        border-radius: 14px;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .details-title {
        color: var(--dark-navy);
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid var(--cream);
    }

        .details-title i {
            color: var(--sage-green);
            font-size: 1.2rem;
        }

    .category-info {
        display: grid;
        gap: 1rem;
    }

    .info-row {
        display: flex;
        align-items: start;
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(163, 176, 135, 0.2);
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        color: var(--slate-blue);
        font-weight: 700;
        font-size: 0.95rem;
        min-width: 120px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .info-label i {
            color: var(--sage-green);
            font-size: 1rem;
        }

    .info-value {
        color: var(--dark-navy);
        font-size: 0.95rem;
        font-weight: 600;
        flex: 1;
    }

    /* Impact Warning */
    .impact-warning {
        background: white;
        border-left: 4px solid var(--error-red);
        border-radius: 0 10px 10px 0;
        padding: 1.25rem;
        margin-bottom: 2rem;
    }

    .impact-warning-text {
        color: var(--slate-blue);
        font-size: 0.9rem;
        margin: 0;
        line-height: 1.6;
    }

        .impact-warning-text i {
            color: var(--error-red);
            margin-right: 0.5rem;
        }

        .impact-warning-text strong {
            color: var(--dark-navy);
        }

    /* Divider */
    .danger-divider {
        height: 2px;
        background: linear-gradient(90deg, transparent, var(--error-red), transparent);
        margin: 2rem 0;
    }

    /* Form Actions */
    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-delete {
        background: linear-gradient(135deg, var(--error-red), #c82333);
        border: none;
        color: white;
        padding: 0.9rem 2.5rem;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
    }

        .btn-delete:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(220, 53, 69, 0.5);
            color: white;
            background: linear-gradient(135deg, #c82333, #bd2130);
        }

        .btn-delete i {
            margin-right: 0.5rem;
        }

    .btn-cancel {
        background: white;
        border: 2px solid var(--slate-blue);
        color: var(--slate-blue);
        padding: 0.9rem 2.5rem;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }

        .btn-cancel:hover {
            background: var(--slate-blue);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(67, 86, 99, 0.3);
        }

        .btn-cancel i {
            margin-right: 0.5rem;
        }

    /* Confirmation Text */
    .confirmation-text {
        background: white;
        border: 2px solid var(--cream);
        border-radius: 12px;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
    }

        .confirmation-text p {
            color: var(--slate-blue);
            font-size: 0.9rem;
            margin: 0;
            line-height: 1.6;
        }

        .confirmation-text strong {
            color: var(--dark-navy);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .delete-card-body {
            padding: 2rem 1.5rem;
        }

        .page-header {
            padding: 1.25rem 1.5rem;
        }

        .page-header-title {
            font-size: 1.4rem;
        }

        .category-details {
            padding: 1.5rem;
        }

        .info-row {
            flex-direction: column;
            gap: 0.5rem;
        }

        .info-label {
            min-width: auto;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn-delete,
        .btn-cancel {
            width: 100%;
            text-align: center;
        }

        .warning-alert-content {
            flex-direction: column;
            text-align: center;
        }
    }

    @@media (max-width: 576px) {
        .delete-card-body {
            padding: 1.5rem 1.25rem;
        }

        .page-header {
            padding: 1rem 1.25rem;
            border-radius: 12px 12px 0 0;
        }

        .page-header-title {
            font-size: 1.2rem;
        }

        .page-header-icon {
            font-size: 1.5rem;
        }

        .warning-title {
            font-size: 1.1rem;
        }

        .warning-icon {
            font-size: 2rem;
        }

        .category-details {
            padding: 1.25rem;
        }
    }
</style>

<div class="admin-delete-container">
    <div class="row">
        <div class="col-lg-7 col-xl-6 mx-auto">
            <!-- Page Header -->
            <div class="page-header">
                <div class="page-header-content">
                    <i class="bi bi-exclamation-triangle-fill page-header-icon"></i>
                    <h4 class="page-header-title">Delete Category</h4>
                </div>
            </div>

            <!-- Delete Card -->
            <div class="delete-card">
                <div class="delete-card-body">
                    <!-- Warning Alert -->
                    <div class="warning-alert">
                        <div class="warning-alert-content">
                            <i class="bi bi-exclamation-octagon-fill warning-icon"></i>
                            <div class="warning-text">
                                <div class="warning-title">Are you sure?</div>
                                <p class="warning-description">
                                    This action cannot be undone. The category will be permanently removed from your store.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Impact Warning -->
                    <div class="impact-warning">
                        <p class="impact-warning-text">
                            <i class="bi bi-info-circle-fill"></i>
                            <strong>Important:</strong> Deleting this category may affect products associated with it. Make sure to reassign those products to another category if needed.
                        </p>
                    </div>

                    <!-- Category Details -->
                    <div class="category-details">
                        <h5 class="details-title">
                            <i class="bi bi-folder-fill"></i>Category Details
                        </h5>
                        <div class="category-info">
                            <div class="info-row">
                                <div class="info-label">
                                    <i class="bi bi-hash"></i>ID:
                                </div>
                                <div class="info-value">@Model.Id</div>
                            </div>
                            <div class="info-row">
                                <div class="info-label">
                                    <i class="bi bi-tag-fill"></i>Name:
                                </div>
                                <div class="info-value">@Model.Name</div>
                            </div>
                            <div class="info-row">
                                <div class="info-label">
                                    <i class="bi bi-card-text"></i>Description:
                                </div>
                                <div class="info-value">@(Model.Description ?? "N/A")</div>
                            </div>
                        </div>
                    </div>

                    <!-- Divider -->
                    <div class="danger-divider"></div>

                    <!-- Confirmation Text -->
                    <div class="confirmation-text">
                        <p>
                            <strong>⚠️ Final Warning:</strong> By clicking "Confirm Delete", you acknowledge that <strong>@Model.Name</strong> category will be permanently deleted from your Shopfinity store.
                        </p>
                    </div>

                    <!-- Form -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-actions">
                            <button type="submit" class="btn-delete">
                                <i class="bi bi-trash-fill"></i>Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn-cancel">
                                <i class="bi bi-x-circle"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
