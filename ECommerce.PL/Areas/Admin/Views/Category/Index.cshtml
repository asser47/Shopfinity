@model IEnumerable<ECommerce.DAL.Models.Category>
@{
    ViewData["Title"] = "Categories Management - Shopfinity Admin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Page Container */
    .categories-container {
        padding: 2rem 0;
        animation: fadeInUp 0.5s ease;
    }

    /* Page Header */
    .page-header {
        background: linear-gradient(135deg, var(--dark-navy), var(--slate-blue));
        color: white;
        padding: 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
        animation: fadeInDown 0.6s ease;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(163, 176, 135, 0.2) 0%, transparent 70%);
            border-radius: 50%;
        }

    .page-header-content {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .page-title-section {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .page-icon {
        font-size: 2.5rem;
    }

    .page-title-group h2 {
        font-size: 2rem;
        font-weight: 800;
        margin: 0;
    }

    .page-subtitle {
        font-size: 0.95rem;
        opacity: 0.9;
        margin: 0.25rem 0 0 0;
    }

    /* Add Category Button */
    .btn-add-category {
        background: linear-gradient(135deg, var(--sage-green), #b5c599);
        border: none;
        color: white;
        padding: 0.85rem 2rem;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(163, 176, 135, 0.3);
        text-decoration: none;
        display: inline-block;
    }

        .btn-add-category:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(163, 176, 135, 0.5);
            color: white;
        }

        .btn-add-category i {
            margin-right: 0.5rem;
            font-size: 1.1rem;
        }

    /* Stats Bar */
    .stats-bar {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .stat-card {
        background: white;
        border: 2px solid var(--cream);
        border-radius: 14px;
        padding: 1.25rem 1.5rem;
        flex: 1;
        min-width: 200px;
        box-shadow: 0 2px 10px rgba(49, 54, 71, 0.08);
        transition: all 0.3s;
    }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 15px rgba(49, 54, 71, 0.12);
        }

    .stat-label {
        color: var(--slate-blue);
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .stat-value {
        color: var(--dark-navy);
        font-size: 1.8rem;
        font-weight: 800;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .stat-icon {
        font-size: 1.5rem;
        color: var(--sage-green);
    }

    /* Table Card */
    .table-card {
        background: white;
        border: 2px solid var(--cream);
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(49, 54, 71, 0.1);
        overflow: hidden;
    }

    /* Table Styling */
    .categories-table {
        margin: 0;
        width: 100%;
    }

        .categories-table thead {
            background: linear-gradient(135deg, var(--cream), #fffae6);
        }

            .categories-table thead th {
                color: var(--dark-navy);
                font-weight: 700;
                font-size: 0.9rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                padding: 1.25rem 1rem;
                border: none;
            }

        .categories-table tbody tr {
            transition: all 0.3s;
            border-bottom: 1px solid var(--cream);
        }

            .categories-table tbody tr:hover {
                background: rgba(163, 176, 135, 0.05);
                transform: scale(1.01);
            }

        .categories-table tbody td {
            padding: 1rem;
            vertical-align: middle;
            color: var(--slate-blue);
            font-size: 0.95rem;
        }

    /* Category ID Badge */
    .category-id-badge {
        background: linear-gradient(135deg, var(--slate-blue), #6b7280);
        color: white;
        padding: 0.35rem 0.75rem;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 700;
        display: inline-block;
    }

    /* Category Name */
    .category-name {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--dark-navy);
        font-weight: 600;
        font-size: 1rem;
    }

        .category-name i {
            color: var(--sage-green);
            font-size: 1.2rem;
        }

    /* Category Description */
    .category-description {
        color: var(--slate-blue);
        font-size: 0.9rem;
        max-width: 400px;
        line-height: 1.4;
    }

    /* Action Buttons */
    .actions-cell {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .btn-edit {
        background: linear-gradient(135deg, var(--warning-orange), #fb923c);
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.85rem;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
    }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(245, 158, 11, 0.4);
            color: white;
        }

    .btn-delete {
        background: linear-gradient(135deg, var(--error-red), #c82333);
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.85rem;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
    }

        .btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
            color: white;
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }

    .empty-icon {
        font-size: 5rem;
        color: var(--sage-green);
        opacity: 0.3;
        margin-bottom: 1.5rem;
    }

    .empty-title {
        color: var(--dark-navy);
        font-weight: 700;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .empty-text {
        color: var(--slate-blue);
        margin-bottom: 2rem;
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .categories-table {
            font-size: 0.85rem;
        }

        .actions-cell {
            flex-direction: column;
        }

        .btn-edit,
        .btn-delete {
            width: 100%;
            justify-content: center;
        }
    }

    @@media (max-width: 768px) {
        .page-header-content {
            flex-direction: column;
            text-align: center;
        }

        .page-title-section {
            flex-direction: column;
        }

        .btn-add-category {
            width: 100%;
        }

        .stats-bar {
            flex-direction: column;
        }

        .stat-card {
            min-width: 100%;
        }

        .table-responsive {
            border-radius: 20px;
            overflow-x: auto;
        }

        .category-description {
            max-width: 100%;
        }
    }

    @@media (max-width: 576px) {
        .page-header {
            padding: 1.5rem;
        }

        .page-title-group h2 {
            font-size: 1.5rem;
        }

        .page-icon {
            font-size: 2rem;
        }

        .categories-table thead th {
            padding: 1rem 0.5rem;
            font-size: 0.8rem;
        }

        .categories-table tbody td {
            padding: 0.75rem 0.5rem;
            font-size: 0.85rem;
        }
    }
</style>

<div class="categories-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title-section">
                <i class="bi bi-tags-fill page-icon"></i>
                <div class="page-title-group">
                    <h2>Categories Management</h2>
                    <p class="page-subtitle">Organize your Shopfinity product categories</p>
                </div>
            </div>
            <a asp-action="Create" class="btn-add-category">
                <i class="bi bi-plus-circle-fill"></i>Add New Category
            </a>
        </div>
    </div>

    <!-- Stats Bar -->
    <div class="stats-bar">
        <div class="stat-card">
            <div class="stat-label">Total Categories</div>
            <div class="stat-value">
                <i class="bi bi-folder-fill stat-icon"></i>
                <span>@Model.Count()</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Active Categories</div>
            <div class="stat-value">
                <i class="bi bi-check-circle stat-icon"></i>
                <span>@Model.Count()</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Categories System</div>
            <div class="stat-value">
                <i class="bi bi-gear-fill stat-icon"></i>
                <span>Active</span>
            </div>
        </div>
    </div>

    <!-- Table Card -->
    <div class="table-card">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table categories-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Category Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>
                                    <span class="category-id-badge">
                                        #@category.Id
                                    </span>
                                </td>
                                <td>
                                    <div class="category-name">
                                        <i class="bi bi-folder-fill"></i>
                                        <span>@category.Name</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="category-description">
                                        @(string.IsNullOrEmpty(category.Description) ? "No description provided" : category.Description)
                                    </div>
                                </td>
                                <td>
                                    <div class="actions-cell">
                                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn-edit">
                                            <i class="bi bi-pencil-fill"></i>Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn-delete">
                                            <i class="bi bi-trash-fill"></i>Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-folder-x empty-icon"></i>
                <h3 class="empty-title">No Categories Yet</h3>
                <p class="empty-text">Start organizing your products by creating categories.</p>
                <a asp-action="Create" class="btn-add-category">
                    <i class="bi bi-plus-circle-fill"></i>Create Your First Category
                </a>
            </div>
        }
    </div>
</div>
