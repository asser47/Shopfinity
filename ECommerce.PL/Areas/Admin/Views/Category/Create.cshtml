@model ECommerce.DAL.Models.Category
@{
    ViewData["Title"] = "Create Category - Shopfinity Admin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>

    @@keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(-15px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* Page Container */
    .admin-create-container {
        padding: 2rem 0;
        animation: fadeInUp 0.5s ease;
    }

    /* Page Header */
    .page-header {
        background: linear-gradient(135deg, var(--dark-navy), var(--slate-blue));
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 16px 16px 0 0;
        margin-bottom: 0;
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle, rgba(163, 176, 135, 0.2) 0%, transparent 70%);
            border-radius: 50%;
        }

    .page-header-content {
        position: relative;
        z-index: 1;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .page-header-icon {
        font-size: 1.8rem;
    }

    .page-header-title {
        font-size: 1.6rem;
        font-weight: 800;
        margin: 0;
    }

    /* Card Styling */
    .category-card {
        background: white;
        border: 2px solid var(--cream);
        border-radius: 0 0 20px 20px;
        box-shadow: 0 4px 20px rgba(49, 54, 71, 0.1);
        overflow: hidden;
    }

    .category-card-body {
        padding: 2.5rem;
    }

    /* Form Elements */
    .form-label {
        color: var(--dark-navy);
        font-weight: 700;
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .form-label i {
            color: var(--sage-green);
            font-size: 1rem;
        }

    .form-control {
        border: 2px solid var(--cream);
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: all 0.3s;
        border-radius: 10px;
    }

        .form-control:focus {
            border-color: var(--sage-green);
            box-shadow: 0 0 0 0.2rem rgba(163, 176, 135, 0.25);
        }

    textarea.form-control {
        resize: vertical;
        min-height: 120px;
    }

    /* Form Section */
    .form-section {
        margin-bottom: 1.5rem;
        animation: slideInRight 0.5s ease;
    }

        .form-section:nth-child(1) {
            animation-delay: 0.1s;
        }

        .form-section:nth-child(2) {
            animation-delay: 0.2s;
        }

    /* Info Box */
    .info-box {
        background: linear-gradient(135deg, var(--cream), #fffae6);
        border: 2px solid var(--cream);
        border-radius: 12px;
        padding: 1.25rem;
        margin-bottom: 2rem;
    }

    .info-box-title {
        color: var(--dark-navy);
        font-weight: 700;
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .info-box-title i {
            color: var(--sage-green);
            font-size: 1.1rem;
        }

    .info-box-text {
        color: var(--slate-blue);
        font-size: 0.85rem;
        margin: 0;
    }

    /* Help Text */
    .form-help {
        font-size: 0.85rem;
        color: var(--slate-blue);
        margin-top: 0.25rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

        .form-help i {
            font-size: 0.9rem;
        }

    /* Required Indicator */
    .required-indicator {
        color: #dc3545;
        margin-left: 0.25rem;
    }

    /* Buttons */
    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2.5rem;
        padding-top: 2rem;
        border-top: 2px solid var(--cream);
    }

    .btn-create {
        background: linear-gradient(135deg, var(--sage-green), #b5c599);
        border: none;
        color: white;
        padding: 0.85rem 2rem;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(163, 176, 135, 0.3);
    }

        .btn-create:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(163, 176, 135, 0.5);
            color: white;
        }

        .btn-create i {
            margin-right: 0.5rem;
        }

    .btn-cancel {
        background: white;
        border: 2px solid var(--slate-blue);
        color: var(--slate-blue);
        padding: 0.85rem 2rem;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }

        .btn-cancel:hover {
            background: var(--slate-blue);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(67, 86, 99, 0.3);
        }

    /* Validation Messages */
    .text-danger {
        font-size: 0.85rem;
        margin-top: 0.25rem;
        display: block;
        animation: slideInRight 0.3s ease;
    }

    /* Category Icon Preview */
    .category-preview {
        background: linear-gradient(135deg, var(--cream), #fffae6);
        border: 2px solid var(--sage-green);
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
        margin-bottom: 2rem;
    }

    .category-preview-icon {
        font-size: 3rem;
        color: var(--sage-green);
        margin-bottom: 0.5rem;
    }

    .category-preview-text {
        color: var(--slate-blue);
        font-size: 0.9rem;
        font-weight: 600;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .category-card-body {
            padding: 2rem 1.5rem;
        }

        .page-header {
            padding: 1.25rem 1.5rem;
        }

        .page-header-title {
            font-size: 1.4rem;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn-create,
        .btn-cancel {
            width: 100%;
            text-align: center;
        }
    }

    @@media (max-width: 576px) {
        .category-card-body {
            padding: 1.5rem 1.25rem;
        }

        .page-header {
            padding: 1rem 1.25rem;
            border-radius: 12px 12px 0 0;
        }

        .page-header-title {
            font-size: 1.2rem;
        }

        .page-header-icon {
            font-size: 1.5rem;
        }
    }
</style>

<div class="admin-create-container">
    <div class="row">
        <div class="col-lg-7 col-xl-6 mx-auto">
            <!-- Page Header -->
            <div class="page-header">
                <div class="page-header-content">
                    <i class="bi bi-plus-circle-fill page-header-icon"></i>
                    <h4 class="page-header-title">Create New Category</h4>
                </div>
            </div>

            <!-- Category Card -->
            <div class="category-card">
                <div class="category-card-body">
                    <!-- Info Box -->
                    <div class="info-box">
                        <div class="info-box-title">
                            <i class="bi bi-info-circle-fill"></i>
                            <span>Category Information</span>
                        </div>
                        <p class="info-box-text">
                            Create a new category to organize your Shopfinity products. Categories help customers find products easily.
                        </p>
                    </div>

                    <!-- Category Preview -->
                    <div class="category-preview">
                        <i class="bi bi-folder-fill category-preview-icon"></i>
                        <p class="category-preview-text">New Category</p>
                    </div>

                    <form asp-action="Create" method="post">
                        <!-- Category Name -->
                        <div class="form-section">
                            <label asp-for="Name" class="form-label">
                                <i class="bi bi-tag-fill"></i>Category Name<span class="required-indicator">*</span>
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Enter category name (e.g., Electronics, Clothing)" required />
                            <small class="form-help">
                                <i class="bi bi-lightbulb"></i>Choose a clear, descriptive name for your category
                            </small>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Category Description -->
                        <div class="form-section">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-card-text"></i>Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter a brief description of this category"></textarea>
                            <small class="form-help">
                                <i class="bi bi-lightbulb"></i>Optional: Provide additional details about what products belong in this category
                            </small>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Form Actions -->
                        <div class="form-actions">
                            <button type="submit" class="btn-create">
                                <i class="bi bi-check-circle-fill"></i>Create Category
                            </button>
                            <a asp-action="Index" class="btn-cancel">
                                <i class="bi bi-x-circle"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
