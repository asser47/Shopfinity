@{
    ViewData["Title"] = "Process Payment - Shopfinity";
}

<style>

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }
    }

    @@keyframes shimmer {
        0% {
            background-position: -1000px 0;
        }

        100% {
            background-position: 1000px 0;
        }
    }

    /* Payment Container */
    .payment-container {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
    }

    /* Payment Card */
    .payment-card {
        background: white;
        border: 2px solid var(--cream);
        border-radius: 24px;
        box-shadow: 0 10px 40px rgba(49, 54, 71, 0.15);
        overflow: hidden;
        animation: fadeInUp 0.6s ease;
        max-width: 550px;
        width: 100%;
    }

    /* Card Header */
    .payment-header {
        background: linear-gradient(135deg, var(--dark-navy), var(--slate-blue));
        color: white;
        padding: 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .payment-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(163, 176, 135, 0.2) 0%, transparent 70%);
            border-radius: 50%;
        }

    .payment-header-content {
        position: relative;
        z-index: 1;
    }

    .payment-icon {
        font-size: 3rem;
        margin-bottom: 0.5rem;
        display: inline-block;
        animation: pulse 2s ease-in-out infinite;
    }

    .payment-title {
        font-size: 1.8rem;
        font-weight: 800;
        margin: 0;
    }

    /* Card Body */
    .payment-body {
        padding: 3rem 2.5rem;
        text-align: center;
    }

    /* Order Total */
    .order-total-section {
        background: linear-gradient(135deg, var(--cream), #fffae6);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        border: 2px solid var(--sage-green);
    }

    .total-label {
        color: var(--slate-blue);
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .total-amount {
        color: var(--sage-green);
        font-size: 2.5rem;
        font-weight: 800;
        margin: 0;
        line-height: 1;
    }

    /* Info Text */
    .payment-info {
        color: var(--slate-blue);
        font-size: 1rem;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    /* Pay Button */
    .btn-pay {
        background: linear-gradient(135deg, var(--sage-green), #b5c599);
        border: none;
        color: white;
        padding: 1rem 3rem;
        border-radius: 14px;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(163, 176, 135, 0.3);
        display: inline-block;
        width: 100%;
        max-width: 350px;
    }

        .btn-pay:hover:not(:disabled) {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(163, 176, 135, 0.5);
            color: white;
        }

        .btn-pay:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

        .btn-pay i {
            margin-right: 0.5rem;
            font-size: 1.2rem;
        }

        /* Processing State */
        .btn-pay.processing {
            background: linear-gradient(135deg, var(--slate-blue), #6b7280);
            animation: shimmer 2s linear infinite;
            background-size: 1000px 100%;
        }

    /* Security Badge */
    .security-section {
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 2px solid var(--cream);
    }

    .security-badges {
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
        margin-top: 1rem;
    }

    .security-badge {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--slate-blue);
        font-size: 0.9rem;
        font-weight: 600;
    }

        .security-badge i {
            font-size: 1.3rem;
            color: var(--sage-green);
        }

    .security-text {
        color: var(--slate-blue);
        font-size: 0.85rem;
        margin-top: 1rem;
        font-weight: 500;
    }

    /* Stripe Logo */
    .powered-by {
        margin-top: 1.5rem;
        color: var(--slate-blue);
        font-size: 0.85rem;
        opacity: 0.8;
    }

    /* Loading Spinner */
    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .spinner {
        display: inline-block;
        animation: spin 1s linear infinite;
    }

    /* Cancel Link */
    .cancel-link {
        margin-top: 1.5rem;
        display: inline-block;
        color: var(--slate-blue);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
    }

        .cancel-link:hover {
            color: var(--dark-navy);
            text-decoration: underline;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .payment-body {
            padding: 2rem 1.5rem;
        }

        .payment-header {
            padding: 1.5rem;
        }

        .payment-icon {
            font-size: 2.5rem;
        }

        .payment-title {
            font-size: 1.4rem;
        }

        .total-amount {
            font-size: 2rem;
        }

        .security-badges {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>

<div class="container payment-container">
    <div class="row justify-content-center w-100">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="payment-card">
                <!-- Header -->
                <div class="payment-header">
                    <div class="payment-header-content">
                        <i class="bi bi-credit-card-2-front payment-icon"></i>
                        <h4 class="payment-title">Secure Payment</h4>
                    </div>
                </div>

                <!-- Body -->
                <div class="payment-body">
                    <!-- Order Total -->
                    <div class="order-total-section">
                        <div class="total-label">Order Total</div>
                        <div class="total-amount">@ViewBag.TotalAmount.ToString("C")</div>
                    </div>

                    <!-- Info Text -->
                    <p class="payment-info">
                        <i class="bi bi-info-circle me-2"></i>
                        You will be redirected to Stripe's secure checkout to complete your payment safely.
                    </p>

                    <!-- Pay Button -->
                    <button id="checkout-button" class="btn-pay">
                        <i class="bi bi-lock-fill"></i>Pay with Stripe
                    </button>

                    <!-- Cancel Link -->
                    <div>
                        <a href="@Url.Action("Index", "Cart")" class="cancel-link">
                            <i class="bi bi-arrow-left me-1"></i>Return to Cart
                        </a>
                    </div>

                    <!-- Security Section -->
                    <div class="security-section">
                        <div class="security-badges">
                            <div class="security-badge">
                                <i class="bi bi-shield-check"></i>
                                <span>SSL Encrypted</span>
                            </div>
                            <div class="security-badge">
                                <i class="bi bi-lock-fill"></i>
                                <span>Secure Payment</span>
                            </div>
                            <div class="security-badge">
                                <i class="bi bi-patch-check-fill"></i>
                                <span>PCI Compliant</span>
                            </div>
                        </div>
                        <p class="security-text">
                            Your payment information is encrypted and never stored on our servers
                        </p>
                        <div class="powered-by">
                            Powered by <strong>Stripe</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="stripe-key" value="@ViewBag.StripePublishableKey" />
<input type="hidden" id="order-id" value="@ViewBag.OrderId" />
@Html.AntiForgeryToken()

@section Scripts {
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        const stripe = Stripe(document.getElementById('stripe-key').value);
        const orderId = document.getElementById('order-id').value;

        document.getElementById('checkout-button').addEventListener('click', function() {
            const button = this;
            button.disabled = true;
            button.classList.add('processing');
            button.innerHTML = '<i class="bi bi-hourglass-split spinner"></i>Processing Payment...';

            fetch(`/Payment/CreateCheckoutSession?orderId=${orderId}`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('[name="__RequestVerificationToken"]').value
                }
            })
            .then(res => {
                if (!res.ok) {
                    throw new Error('Network response was not ok');
                }
                return res.json();
            })
            .then(data => {
                if (data.sessionId) {
                    return stripe.redirectToCheckout({ sessionId: data.sessionId });
                } else {
                    throw new Error('No session ID received');
                }
            })
            .catch(error => {
                console.error('Payment error:', error);
                alert('Payment failed. Please try again or contact support.');
                button.disabled = false;
                button.classList.remove('processing');
                button.innerHTML = '<i class="bi bi-lock-fill"></i>Pay with Stripe';
            });
        });
    </script>
}
