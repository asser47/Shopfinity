@model ECommerce.PL.ViewModels.CartViewModel
@{
    ViewData["Title"] = "Shopping Cart - Shopfinity";
}

<style>
    @@keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* Breadcrumb */
    .breadcrumb {
        background: white;
        border-radius: 12px;
        padding: 1rem 1.5rem;
        box-shadow: 0 2px 8px rgba(49, 54, 71, 0.08);
        border: 2px solid var(--cream);
        animation: fadeInDown 0.6s ease;
    }

    .breadcrumb-item a {
        color: var(--sage-green);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
    }

    .breadcrumb-item a:hover {
        color: var(--dark-navy);
    }

    /* Header */
    .cart-header {
        background: linear-gradient(135deg, var(--dark-navy), var(--slate-blue));
        color: white;
        padding: 2.5rem 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        animation: fadeInDown 0.8s ease;
        position: relative;
        overflow: hidden;
    }

    .cart-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(163, 176, 135, 0.2) 0%, transparent 70%);
        border-radius: 50%;
    }

    .cart-header-content {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .cart-title {
        font-size: 2rem;
        font-weight: 800;
        margin: 0;
    }

    .btn-continue {
        background: white;
        color: var(--dark-navy);
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s;
        text-decoration: none;
    }

    .btn-continue:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(255, 255, 255, 0.4);
        color: var(--dark-navy);
    }

    /* Cart Items Card */
    .cart-items-card {
        background: white;
        border: 2px solid var(--cream);
        border-radius: 20px;
        box-shadow: 0 4px 15px rgba(49, 54, 71, 0.1);
        overflow: hidden;
        margin-bottom: 2rem;
        animation: slideInLeft 0.8s ease;
    }

    .cart-card-header {
        background: linear-gradient(135deg, var(--sage-green), #b5c599);
        color: white;
        padding: 1.2rem 1.5rem;
    }

    .cart-card-header h5 {
        margin: 0;
        font-weight: 700;
    }

    .cart-item {
        padding: 1.5rem;
        border-bottom: 2px solid var(--cream);
        transition: all 0.3s;
    }

    .cart-item:last-child {
        border-bottom: none;
    }

    .cart-item:hover {
        background: var(--cream);
        transform: translateX(5px);
    }

    .product-image-cart {
        width: 100%;
        max-height: 120px;
        object-fit: cover;
        border-radius: 12px;
        border: 2px solid var(--cream);
    }

    .product-name-cart {
        color: var(--dark-navy);
        font-weight: 700;
        font-size: 1.1rem;
        text-decoration: none;
        transition: color 0.3s;
    }

    .product-name-cart:hover {
        color: var(--sage-green);
    }

    .quantity-controls {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-qty {
        background: var(--cream);
        border: 2px solid var(--sage-green);
        color: var(--dark-navy);
        width: 35px;
        height: 35px;
        border-radius: 8px;
        transition: all 0.3s;
        font-weight: 700;
    }

    .btn-qty:hover:not(:disabled) {
        background: var(--sage-green);
        color: white;
    }

    .btn-qty:disabled {
        opacity: 0.4;
        cursor: not-allowed;
    }

    .qty-input {
        width: 60px;
        text-align: center;
        border: 2px solid var(--cream);
        border-radius: 8px;
        font-weight: 700;
        color: var(--dark-navy);
    }

    .item-subtotal {
        font-size: 1.4rem;
        font-weight: 800;
        color: var(--sage-green);
    }

    .btn-remove {
        background: transparent;
        border: 2px solid #ef4444;
        color: #ef4444;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s;
    }

    .btn-remove:hover {
        background: #ef4444;
        color: white;
    }

    .btn-clear-cart {
        background: white;
        border: 2px solid #ef4444;
        color: #ef4444;
        padding: 0.8rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s;
    }

    .btn-clear-cart:hover {
        background: #ef4444;
        color: white;
        transform: translateY(-2px);
    }

    /* Order Summary */
    .summary-card {
        background: white;
        border: 2px solid var(--sage-green);
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(163, 176, 135, 0.2);
        overflow: hidden;
        position: sticky;
        top: 20px;
        animation: fadeInUp 0.8s ease;
    }

    .summary-header {
        background: linear-gradient(135deg, var(--sage-green), #b5c599);
        color: white;
        padding: 1.2rem 1.5rem;
    }

    .summary-header h5 {
        margin: 0;
        font-weight: 700;
    }

    .summary-body {
        padding: 1.5rem;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
        color: var(--dark-navy);
    }

    .summary-total {
        display: flex;
        justify-content: space-between;
        padding-top: 1rem;
        border-top: 3px solid var(--sage-green);
        margin-bottom: 1.5rem;
    }

    .summary-total h4 {
        color: var(--sage-green);
        font-weight: 800;
    }

    .btn-checkout {
        background: linear-gradient(135deg, var(--sage-green), #b5c599);
        border: none;
        color: white;
        padding: 1rem;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1.1rem;
        width: 100%;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(163, 176, 135, 0.3);
    }

    .btn-checkout:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(163, 176, 135, 0.5);
        color: white;
    }

    .trust-badges {
        padding-top: 1.5rem;
        border-top: 2px solid var(--cream);
        margin-top: 1.5rem;
    }

    .trust-item {
        text-align: center;
    }

    .trust-icon {
        font-size: 2rem;
        color: var(--sage-green);
        margin-bottom: 0.5rem;
    }

    /* Empty Cart */
    .empty-cart {
        text-align: center;
        padding: 5rem 2rem;
        background: white;
        border-radius: 20px;
        border: 2px solid var(--cream);
        animation: fadeInUp 0.8s ease;
    }

    .empty-icon {
        font-size: 6rem;
        color: var(--sage-green);
        opacity: 0.4;
    }
</style>

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door-fill me-1"></i>Home
                </a>
            </li>
            <li class="breadcrumb-item active">Shopping Cart</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="cart-header">
        <div class="cart-header-content">
            <h1 class="cart-title">
                <i class="bi bi-cart-fill me-2"></i>Shopping Cart
            </h1>
            <a asp-controller="Product" asp-action="Index" class="btn-continue">
                <i class="bi bi-arrow-left me-2"></i>Continue Shopping
            </a>
        </div>
    </div>

    @if (Model.Items == null || !Model.Items.Any())
    {
        <!-- Empty Cart -->
        <div class="empty-cart">
            <i class="bi bi-cart-x empty-icon"></i>
            <h2 class="mt-4" style="color: var(--dark-navy);">Your Cart is Empty</h2>
            <p class="text-muted mb-4">Start adding products to your cart!</p>
            <a asp-controller="Product" asp-action="Index" class="btn-checkout" style="max-width: 300px; margin: 0 auto;">
                <i class="bi bi-grid-fill me-2"></i>Browse Products
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="cart-items-card">
                    <div class="cart-card-header">
                        <h5><i class="bi bi-bag-check-fill me-2"></i>Cart Items (@Model.ItemCount items)</h5>
                    </div>
                    <div>
                        @foreach (var item in Model.Items)
                        {
                            <div class="cart-item">
                                <div class="row align-items-center">
                                    <!-- Image -->
                                    <div class="col-md-2">
                                        @if (!string.IsNullOrEmpty(item.ProductImage))
                                        {
                                            <img src="@item.ProductImage" class="product-image-cart" alt="@item.ProductName">
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 120px;">
                                                <i class="bi bi-image text-muted fs-3"></i>
                                            </div>
                                        }
                                    </div>

                                    <!-- Product Info -->
                                    <div class="col-md-4">
                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="product-name-cart">
                                            @item.ProductName
                                        </a>
                                        <p class="text-muted small mb-0 mt-2">
                                            <i class="bi bi-tag-fill"></i> @item.Price.ToString("C")
                                        </p>
                                    </div>

                                    <!-- Quantity -->
                                    <div class="col-md-3">
                                        <form asp-action="UpdateQuantity" method="post">
                                            <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                            <div class="quantity-controls">
                                                <button type="submit" name="quantity" value="@(item.Quantity - 1)"
                                                        class="btn btn-qty" @(item.Quantity <= 1 ? "disabled" : "")>
                                                    <i class="bi bi-dash"></i>
                                                </button>
                                                <input type="number" class="form-control qty-input"
                                                       value="@item.Quantity" readonly>
                                                <button type="submit" name="quantity" value="@(item.Quantity + 1)"
                                                        class="btn btn-qty" @(item.Quantity >= item.MaxStock ? "disabled" : "")>
                                                    <i class="bi bi-plus"></i>
                                                </button>
                                            </div>
                                        </form>
                                        <small class="text-muted d-block text-center mt-1">Max: @item.MaxStock</small>
                                    </div>

                                    <!-- Subtotal & Remove -->
                                    <div class="col-md-3 text-end">
                                        <div class="item-subtotal mb-2">@item.Subtotal.ToString("C")</div>
                                        <form asp-action="Remove" method="post">
                                            <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                            <button type="submit" class="btn-remove btn-sm">
                                                <i class="bi bi-trash"></i> Remove
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Clear Cart -->
                <form asp-action="Clear" method="post">
                    <button type="submit" class="btn-clear-cart" onclick="return confirm('Clear entire cart?')">
                        <i class="bi bi-trash me-2"></i>Clear Cart
                    </button>
                </form>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="summary-card">
                    <div class="summary-header">
                        <h5><i class="bi bi-receipt-cutoff me-2"></i>Order Summary</h5>
                    </div>
                    <div class="summary-body">
                        <div class="summary-row">
                            <span>Subtotal:</span>
                            <strong>@Model.Subtotal.ToString("C")</strong>
                        </div>
                        <div class="summary-row">
                            <span>Tax (14%):</span>
                            <strong>@Model.Tax.ToString("C")</strong>
                        </div>
                        <div class="summary-total">
                            <h4>Total:</h4>
                            <h4>@Model.Total.ToString("C")</h4>
                        </div>

                        <a asp-controller="Order" asp-action="Checkout" class="btn-checkout mb-3">
                            <i class="bi bi-credit-card-fill me-2"></i>Proceed to Checkout
                        </a>

                        <a asp-controller="Product" asp-action="Index" class="btn-continue w-100 text-center d-block">
                            <i class="bi bi-arrow-left me-2"></i>Continue Shopping
                        </a>

                        <!-- Trust Badges -->
                        <div class="trust-badges">
                            <div class="row text-center">
                                <div class="col-4 trust-item">
                                    <div style="font-size: 2.5rem; margin-bottom: 0.5rem;">🛡️</div>
                                    <p class="small mb-0" style="color: var(--dark-navy); font-weight: 600;">Secure</p>
                                </div>
                                <div class="col-4 trust-item">
                                    <div style="font-size: 2.5rem; margin-bottom: 0.5rem;">🚚</div>
                                    <p class="small mb-0" style="color: var(--dark-navy); font-weight: 600;">Free Ship</p>
                                </div>
                                <div class="col-4 trust-item">
                                    <div style="font-size: 2.5rem; margin-bottom: 0.5rem;">🔄</div>
                                    <p class="small mb-0" style="color: var(--dark-navy); font-weight: 600;">Returns</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
</div>
