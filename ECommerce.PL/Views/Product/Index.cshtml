@model ECommerce.PL.ViewModels.ProductFilterViewModel
@{
    ViewData["Title"] = "Products - Shopfinity";
}

<style>
    :root {
        --dark-navy: #313647;
        --slate-blue: #6C7A89;
        --sage-green: #A3B087;
        --cream: #F5F1E3;
    }

    /* Search Bar */
    .search-bar {
        background: white;
        border: 2px solid var(--cream);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(49, 54, 71, 0.08);
    }

    .search-input {
        border: 2px solid var(--cream);
        border-radius: 12px;
        padding: 0.75rem 1rem;
        transition: all 0.3s;
    }

        .search-input:focus {
            border-color: var(--sage-green);
            box-shadow: 0 0 0 3px rgba(163, 176, 135, 0.1);
        }

    .btn-search {
        background: linear-gradient(135deg, var(--sage-green), #b5c599);
        border: none;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-search:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(163, 176, 135, 0.4);
            color: white;
        }

    .filter-select {
        border: 2px solid var(--cream);
        border-radius: 12px;
        padding: 0.75rem;
        transition: all 0.3s;
    }

        .filter-select:focus {
            border-color: var(--sage-green);
            box-shadow: 0 0 0 3px rgba(163, 176, 135, 0.1);
        }

    .btn-clear {
        background: white;
        border: 2px solid var(--slate-blue);
        color: var(--slate-blue);
        padding: 0.75rem 1rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-clear:hover {
            background: var(--slate-blue);
            color: white;
            transform: translateY(-2px);
        }

    /* Advanced Filters Card */
    .filters-card {
        background: white;
        border: 2px solid var(--cream);
        border-radius: 20px;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(49, 54, 71, 0.08);
        overflow: hidden;
    }

    .filters-header {
        padding: 1.5rem 2rem;
        background: linear-gradient(135deg, var(--cream), #fffae6);
        cursor: pointer;
        transition: all 0.3s;
    }

        .filters-header:hover {
            background: linear-gradient(135deg, #fffae6, var(--cream));
        }

    /* Product Cards */
    .product-card {
        background: white;
        border: 2px solid var(--cream);
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(49, 54, 71, 0.08);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 30px rgba(49, 54, 71, 0.15);
            border-color: var(--sage-green);
        }

    .product-image-wrapper {
        position: relative;
        width: 100%;
        padding-top: 75%;
        overflow: hidden;
        background: var(--cream);
    }

    .product-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .product-card:hover .product-image {
        transform: scale(1.08);
    }

    .stock-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        z-index: 2;
    }

    .product-body {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .product-title {
        color: var(--dark-navy);
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 0.8rem;
        min-height: 2.2rem;
    }

    .product-description {
        color: var(--slate-blue);
        font-size: 0.9rem;
        line-height: 1.5;
        margin-bottom: 1rem;
        flex-grow: 1;
    }

    .product-actions {
        margin-top: auto;
    }

    .product-price-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid var(--cream);
    }

    .product-price {
        color: var(--sage-green);
        font-weight: 800;
        font-size: 1.5rem;
        margin: 0;
    }

    .stock-indicator {
        padding: 0.3rem 0.7rem;
        border-radius: 15px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .btn-view-details {
        background: linear-gradient(135deg, var(--dark-navy), var(--slate-blue));
        border: none;
        color: white;
        padding: 0.7rem 1rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s;
        text-decoration: none;
        display: block;
        text-align: center;
    }

        .btn-view-details:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(49, 54, 71, 0.3);
            color: white;
        }

    .btn-add-cart {
        background: linear-gradient(135deg, var(--sage-green), #b5c599);
        border: none;
        color: white;
        padding: 0.7rem 1rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-add-cart:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(163, 176, 135, 0.4);
            color: white;
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border: 2px solid var(--cream);
        border-radius: 20px;
        margin-top: 2rem;
    }

    .empty-icon {
        font-size: 4rem;
        color: var(--slate-blue);
        margin-bottom: 1rem;
        opacity: 0.5;
    }

    /* Animations */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .search-bar {
            padding: 1.5rem;
        }

        .product-card {
            margin-bottom: 1.5rem;
        }
    }
</style>

<div class="container py-4">
    <!-- Search & Quick Filters -->
    <div class="search-bar">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-lg-4">
                    <div class="input-group">
                        <input type="text" name="searchTerm" value="@Model?.SearchTerm"
                               class="form-control search-input" placeholder="Search products...">
                        <button type="submit" class="btn btn-search">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-lg-3">
                    <select name="categoryId" class="form-select filter-select">
                        <option value="">All Categories</option>
                        @if (Model?.Categories != null)
                        {
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.Value" selected="@category.Selected">@category.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-lg-3">
                    <select name="sortBy" class="form-select filter-select">
                        <option value="name_asc" selected="@(Model?.SortBy == "name_asc")">Name (A-Z)</option>
                        <option value="name_desc" selected="@(Model?.SortBy == "name_desc")">Name (Z-A)</option>
                        <option value="price_asc" selected="@(Model?.SortBy == "price_asc")">Price (Low to High)</option>
                        <option value="price_desc" selected="@(Model?.SortBy == "price_desc")">Price (High to Low)</option>
                    </select>
                </div>
                <div class="col-lg-2">
                    <a asp-action="Index" class="btn btn-clear w-100">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </div>

            <!-- Preserve advanced filters -->
            @if (Model?.MinPrice.HasValue == true)
            {
                <input type="hidden" name="minPrice" value="@Model.MinPrice" />
            }
            @if (Model?.MaxPrice.HasValue == true)
            {
                <input type="hidden" name="maxPrice" value="@Model.MaxPrice" />
            }
            @if (Model?.InStock.HasValue == true)
            {
                <input type="hidden" name="inStock" value="@Model.InStock" />
            }
        </form>
    </div>

    <!-- Advanced Filters -->
    <div class="filters-card">
        <div class="filters-header" data-bs-toggle="collapse" data-bs-target="#advancedFilters">
            <div class="d-flex justify-content-between align-items-center">
                <span class="fw-bold" style="color: var(--dark-navy);">
                    <i class="bi bi-sliders"></i> Advanced Filters
                </span>
                <i class="bi bi-chevron-down" style="color: var(--sage-green);"></i>
            </div>
        </div>
        <div class="collapse" id="advancedFilters">
            <div class="card-body p-4">
                <form asp-action="Index" method="get">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Min Price</label>
                            <input type="number" name="minPrice" value="@Model?.MinPrice"
                                   class="form-control search-input" placeholder="$0" step="0.01">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Max Price</label>
                            <input type="number" name="maxPrice" value="@Model?.MaxPrice"
                                   class="form-control search-input" placeholder="$999" step="0.01">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Availability</label>
                            <select name="inStock" class="form-select filter-select">
                                <option value="">All Products</option>
                                <option value="true" selected="@(Model?.InStock == true)">In Stock Only</option>
                                <option value="false" selected="@(Model?.InStock == false)">Out of Stock</option>
                            </select>
                        </div>
                    </div>

                    <!-- Preserve quick filters -->
                    @if (!string.IsNullOrEmpty(Model?.SearchTerm))
                    {
                        <input type="hidden" name="searchTerm" value="@Model.SearchTerm" />
                    }
                    @if (Model?.CategoryId.HasValue == true)
                    {
                        <input type="hidden" name="categoryId" value="@Model.CategoryId" />
                    }
                    @if (!string.IsNullOrEmpty(Model?.SortBy))
                    {
                        <input type="hidden" name="sortBy" value="@Model.SortBy" />
                    }

                    <button type="submit" class="btn btn-search mt-3">
                        <i class="bi bi-funnel"></i> Apply Filters
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    @if (Model?.Products == null || !Model.Products.Any())
    {
        <div class="empty-state">
            <i class="bi bi-inbox empty-icon"></i>
            <h3 class="fw-bold mb-3" style="color: var(--dark-navy);">No Products Found</h3>
            <p class="text-muted mb-4">We couldn't find any products matching your criteria.</p>
            <a asp-action="Index" class="btn btn-search">
                <i class="bi bi-grid"></i> View All Products
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var product in Model.Products)
            {
                <div class="col-sm-6 col-lg-4 col-xl-3">
                    <div class="product-card">
                        <!-- Image -->
                        <div class="product-image-wrapper">
                            <img src="@(product.ImageUrl ?? "/images/placeholder.jpg")"
                                 class="product-image"
                                 alt="@product.Name"
                                 onerror="this.src='/images/placeholder.jpg'">

                            @if (product.Stock == 0)
                            {
                                <span class="stock-badge bg-danger text-white">
                                    Out of Stock
                                </span>
                            }
                            else if (product.Stock <= 5)
                            {
                                <span class="stock-badge bg-warning text-dark">
                                    Only @product.Stock left
                                </span>
                            }
                        </div>

                        <!-- Body -->
                        <div class="product-body">
                            <h5 class="product-title">@product.Name</h5>

                            <p class="product-description">
                                @if (product.Description?.Length > 80)
                                {
                                    @product.Description.Substring(0, 80)
                        
                                    <text>...</text>
                                }
                                else
                                {
                                    @product.Description
                                }
                            </p>

                            <!-- Actions -->
                            <div class="product-actions">
                                <div class="product-price-section">
                                    <h4 class="product-price">@product.Price.ToString("C")</h4>
                                    <span class="stock-indicator bg-@(product.Stock > 10 ? "success" : product.Stock > 0 ? "warning" : "secondary") text-white">
                                        @(product.Stock > 0 ? $"{product.Stock} in stock" : "Sold out")
                                    </span>
                                </div>

                                <div class="d-grid gap-2">
                                    <a asp-action="Details" asp-route-id="@product.Id" class="btn-view-details">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>

                                    @if (product.Stock > 0)
                                    {
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                            <input type="hidden" name="productId" value="@product.Id" />
                                            <input type="hidden" name="quantity" value="1" />
                                            <button type="submit" class="btn-add-cart w-100">
                                                <i class="bi bi-cart-plus"></i> Add to Cart
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
